# combine_dicts.py
def merge_dicts_with_defaults(dict1, dict2, dict3, default=""):
    all_keys = set(dict1.keys()).union(dict2.keys()).union(dict3.keys())
    combined_dict = {
        key: {
            'last_sync_response': dict1.get(key, default),
            'last_heartbeat': dict2.get(key, default),
            'last_password_set': dict3.get(key, default),
        }
        for key in all_keys
    }
    return combined_dict

class FilterModule(object):
    def filters(self):
        return {
            'merge_dicts_with_defaults': merge_dicts_with_defaults
        }
