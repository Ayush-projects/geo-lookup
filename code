- name: Combine data with suppressed output
  set_fact:
    combined_data: >-
      {{
        dict((item, {
          'last_sync_response': last_sync_response.get(item, ""),
          'last_heartbeat': last_heartbeat.get(item, ""),
          'last_password_set': last_password_set.get(item, "")
        }) for item in (last_sync_response.keys() | list + last_heartbeat.keys() | list + last_password_set.keys() | list | unique))
      }}
  no_log: true

- name: Display the final combined dictionary
  debug:
    var: combined_data
